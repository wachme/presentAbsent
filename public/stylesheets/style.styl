body
  padding: 0
  margin: 0
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background: lightgray
a
  color: #00B7FF
  
h1, h2 {
  text-shadow: 0px 0px 3px gray
}

input[type="submit"], button
  border: 1px solid black
  padding: 5px
  background: white
  box-shadow: 1px 1px 8px black
  font-weight: bold
  border-radius: 5px
  &:hover
    box-shadow: -1px -1px 8px black
    background: lightgray
    
input
  border-radius: 8px
  padding: 4px
  
.message
  background: lightyellow
  border: 1px solid black
  padding: 8px  
  
.loader
  position: fixed
  background: url('../images/loading.gif') no-repeat
  box-shadow 0px 0px 20px black
  border-radius: 64px
  opacity: 0.7
  width: 64px
  height: 64px

.wrapper
  width: 850px
  padding: 20px
  border: 10px solid black
  background: white
  margin: 50px auto
  overflow: hidden
  box-shadow 0px 0px 20px black
  border-radius: 5px
  overflow: hidden
 
.menu
  width: 890px
  margin: -20px
  display: table
  padding: 0
  border-bottom: 10px solid black
  table-layout: fixed
  margin-bottom: 20px
  background: black
.menu li
  display: table-cell
  text-align: center
.menu a
  position: relative
  color: white
  display: block
  background: rgba(0, 0, 0, 0)
  text-decoration: none
  text-align: center
  padding: 5px
  font-weight: bold
  border-radius: 5px
  z-index: 1
  text-shadow: 0 0 3px black
  
.indicator
  padding: 0
  margin: 0
  background: gray
  position: absolute
  border-radius: 5px
  box-shadow: inset 0 0 10px black
  
.description
  border: 1px solid lightgray
  padding: 5px
  line-height: 20px
  
.label
  display: table-cell
  vertical-align: top
.label span
  display: table-row
  font-style: italic
  color: gray  
  
.schedule
  display: table
  margin: 0 auto
.schedule table
  border-collapse: collapse
.schedule table, .schedule td, .schedule th
  border: 1px solid gray
.schedule td, .schedule th
  width: 1px
  white-space: nowrap
  padding: 10px
  vertical-align: top
.schedule th
  background: lightgray
.schedule .group
  margin-left: 10px
  font-style: italic
.schedule .conflict
  color: red
.schedule .remove
  width: 10px
  height: 10px
  margin: -9px
  float: right
  background: url('../images/remove.png')
  opacity: 0.5
.schedule .remove:hover
  opacity: 1.0
.active-lesson
  background: lightgray
  outline: 1px solid gray

.bar
  background: url('../images/toggle_plus.png') no-repeat gray
  box-shadow: inset 0 0 10px black
  color: white
  border-radius: 10px
  margin-top: 20px
  padding: 10px 30px
  font-weight: bold
  cursor: pointer

.toggle
  display: none
  margin-left: 30px
  margin-top: 10px

.days .date
  background: gray
  color: white
.days td
  padding: 3px
  text-align: center
.days .present span
  background: #00B7FF
  border-radius: 10px
  min-width: 20px
  display: inline-block
  font-weight: bold
  text-shadow: 0 0 5px black
  color: white
.days tr:nth-child(even)
  background: lightgray
  
.frequency .name
  font-weight: bold
  background: gray
  color: white
.frequency td, .frequency th
  padding: 10px
.frequency tr:nth-child(even)
  background: lightgray

.subjects-bar
  display: table-cell
  padding: 5px
  padding-right: 30px
  border: 2px solid gray
  border-radius: 8px
  border-bottom-left-radius: 0
  border-bottom-right-radius: 0
  background: url('../images/expand.png') no-repeat
  background-position: bottom 5px right 5px
  vertical-align: middle
.subjects
  list-style: none
  max-width: 600px
  margin: -2px 0
  padding: 5px
  border: 2px solid gray
  box-shadow: 3px 3px 8px black
  display: none
  position: absolute
  background: white
.subjects label
  padding: 15px
  display: inline-block

.chart
  width: 100%
  height: 300px